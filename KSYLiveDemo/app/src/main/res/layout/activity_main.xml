<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:paddingBottom="@dimen/activity_vertical_margin"
                  android:paddingLeft="@dimen/activity_horizontal_margin"
                  android:paddingRight="@dimen/activity_horizontal_margin"
                  android:paddingTop="@dimen/activity_vertical_margin"
                  tools:context="com.ksyun.live.demo.MainActivity">

        <Button
            android:id="@+id/btn_stream"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="我是主播"/>

        <Button
            android:id="@+id/btn_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_stream"
            android:onClick="onClick"
            android:text="我是观众"/>

        <Button
            android:id="@+id/btn_jump"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="跳转"/>

        <Button
            android:id="@+id/btn_jump2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_player"
            android:onClick="onClick"
            android:text="跳转TextureVodActivity"/>

        <Button
            android:id="@+id/btn_jump3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="PlayRecordActivity"/>

        <Button
            android:id="@+id/btn_jump4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="TextureVideoActivity"/>

        <Button
            android:id="@+id/btn_jump5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="TextureViewMediaActivity"/>

        <Button
            android:id="@+id/btn_jump6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="FloatingVideoActivity"/>

        <Button
            android:id="@+id/btn_jump7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="FloatingPlayingActivity"/>

        <Button
            android:id="@+id/btn_jump8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="MultiplePlayerActivity"/>

        <Button
            android:id="@+id/btn_jump9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="PlayerActivity"/>

        <Button
            android:id="@+id/btn_jump10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="NetMediaActivty"/>

        <Button
            android:id="@+id/btn_jump11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="SettingActivity"/>

        <Button
            android:id="@+id/btn_jump12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="CaptureActivity"/>

        <Button
            android:id="@+id/btn_jump13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="HistoryActivity"/>

        <Button
            android:id="@+id/btn_jump14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="DemoActivity"/>

        <Button
            android:id="@+id/btn_jump15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="BaseCameraActivity"/>

        <Button
            android:id="@+id/btn_jump16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="StdCameraActivity"/>

        <Button
            android:id="@+id/btn_jump17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="FloatCameraActivity"/>

        <Button
            android:id="@+id/btn_jump18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="FloatCameraActivity"/>

        <Button
            android:id="@+id/btn_jump19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="AudioStreamingActivity"/>

    </LinearLayout>

</ScrollView>
